<form class="was-validated" action="/search" method="POST" style="margin: auto; width: 75%;">
  <div id="container" style="margin: 1em;">
    <div style="display: inline-block; *display: inline; zoom: 1; vertical-align: top; width: 20%;">
      <label for=" city">City</label>
      <select class="form-control" name="location" id="location">
        <option value=""> </option>
        <option value="Toronto">Toronto</option>
        <option value="Ottawa">Ottawa</option>
        <option value="Calgary">Calgary</option>
        <option value="Edmonton">Edmonton</option>
        <option value="Vancouver">Vancouver</option>
        <option value="Montreal">Montreal</option>
      </select>
      <br />
    </div>
    <div style="display: inline-block; *display: inline; zoom: 1; vertical-align: top; width: 20%;">
      <label for="checkIn">Check In</label>
      <input id="checkIn" class="form-control" type="date" min="1899-01-01" name="checkIn" />
      <br />
    </div>
    <div style="display: inline-block; *display: inline; zoom: 1; vertical-align: top; width: 20%;">
      <label for="checkOut">Check Out</label>
      <input id="checkOut" class="form-control" type="date" min="1899-01-01" max="2021-13-13" name="checkOut" />
      <br />
    </div>
    <div style="display: inline-block; *display: inline; zoom: 1; vertical-align: top; width: 10%;">
      <label for="guest">Guests</label>
      <input id="guest" class="form-control" type="number" min="1" max="12" value="1" name="guest" />
      <br />
    </div>
    <div
      style="display: inline-block; *display: inline; zoom: 1; margin: 2em; vertical-align: top; height: 0%; width: 10%;">
      <button type="submit" class="btn btn-primary" style="margin: auto; background-color: salmon">Search</button>
    </div>
  </div>
</form>

<script>
  function minDate() {
    var today = new Date();
    var dd = today.getDate();
    var mm = today.getMonth() + 1;
    var yyyy = today.getFullYear();
    if (dd < 10) {
      dd = '0' + dd;
    }
    if (mm < 10) {
      mm = '0' + mm;
    }

    today = yyyy + '-' + mm + '-' + dd;
    document.getElementById('checkIn').setAttribute('min', today);
    document.getElementById('checkOut').setAttribute('min', today);
  }
  minDate();
</script>